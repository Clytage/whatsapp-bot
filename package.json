{
    "name": "whatsapp-bot",
    "version": "1.0.0",
    "description": "A simple and easy-to-use WhatsApp bot project, written in TypeScript.",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "npm run lint && npm run compile",
        "compile": "swc src -d dist",
        "compile:ts": "tsc --build tsconfig.json",
        "lint": "eslint . --ignore-path .gitignore --ext .ts",
        "lint:fix": "eslint . --ignore-path .gitignore --ext .ts --fix",
        "pretty": "prettier --check 'src/**/*.ts'",
        "pretty:write": "prettier --write 'src/**/*.ts'",
        "start": "node --es-module-specifier-resolution=node -r dotenv/config .",
        "start:dev": "rimraf ./dist && npm run compile && npm start"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Clytage/whatsapp-bot.git"
    },
    "author": "Clytage <support@clytage.org>",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/Clytage/whatsapp-bot/issues"
    },
    "homepage": "https://github.com/Clytage/whatsapp-bot#readme",
    "engines": {
        "node": ">=16",
        "npm": ">=7"
    },
    "eslintConfig": {
        "extends": [
            "@clytage-pkg/eslint-config/typescript",
            "prettier"
        ],
        "ignorePatterns": [
            "dist/*",
            "tsup.config.ts"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "rules": {
            "class-methods-use-this": 0
        }
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid"
    },
    "dependencies": {
        "@discordjs/collection": "0.7.0",
        "@open-wa/wa-automate": "4.38.1",
        "@sapphire/async-queue": "^1.3.1",
        "colorette": "2.0.17",
        "dayjs": "1.11.3",
        "dotenv": "16.0.1",
        "got": "^12.1.0",
        "tslib": "2.4.0"
    },
    "devDependencies": {
        "@clytage-pkg/eslint-config": "1.2.0",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.2.197",
        "@types/node": "17.0.23",
        "@typescript-eslint/eslint-plugin": "5.27.1",
        "@typescript-eslint/parser": "5.27.1",
        "eslint": "8.17.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.0.0",
        "prettier": "2.6.2",
        "rimraf": "3.0.2",
        "ts-node": "10.8.1",
        "typescript": "4.7.3"
    }
}
