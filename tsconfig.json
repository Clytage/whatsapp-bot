{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "paths": {
            "#bajigur/*": ["*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**",
        "**/.*/"
    ]
}
