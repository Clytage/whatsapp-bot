{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "src",
        "typeRoots": ["node_modules/@types", "src/types"],
        "paths": {
            "#bajigur/*": ["*"]
        }
    },
    "exclude": ["node_modules/**", "**/.*/"],
    "include": ["src/**/*.ts"]
}
