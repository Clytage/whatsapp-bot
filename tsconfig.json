{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ES2021"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "outDir": "dist",
        "typeRoots": ["node_modules/@types", "src/types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**", "**/.*/"]
}
